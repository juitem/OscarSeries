{
  // groups: mapping of group name -> list of section name patterns (wildcards allowed, e.g., ".text*", ".data")
  "groups": {
    "MYCODE": [".mycode*", ".custom.text"],
    "MYDATA": [".mydata*", ".custom.data"]
  },

  // all_files: boolean (true = include Added/Removed files, false = only Common files)
  "all_files": false,

  // top_n_groups: integer >=0 (0 = ALL groups, N > 0 = Top N groups by diff)
  "top_n_groups": 0,

  // top_n_files: integer >=0 (0 = ALL files per group, N > 0 = Top N files per group by diff)
  "top_n_files": 10,

  // files_sort_by: string, group name or "FILESIZE" (default = "FILESIZE")
  "files_sort_by": "FILESIZE",

  // files_sort_metric: string, one of ["absdiff", "diff", "old", "new", "diff%"]
  "files_sort_metric": "absdiff",

  // group_sort_by: string, one of ["metric", "name"] (default = "metric")
  "group_sort_by": "metric",

  // group_sort_metric: string, one of ["absdiff", "diff", "old", "new", "diff%"]
  "group_sort_metric": "absdiff"
}